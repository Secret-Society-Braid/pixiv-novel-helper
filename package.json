{
  "name": "pixiv-novel-helper",
  "displayName": "pixiv-novel-helper",
  "description": "It provides a bunch of helping methods to write novels for pixiv",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsConatiners": {
      "activitybar": [
        {
          "id": "novel-file-view",
          "title": "Novel File View"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "novel-view",
          "name": "Novel File Structure"
        }
      ]
    },
    "commands": [
      {
        "command": "pixiv-novel-helper.openPixiv",
        "title": "Open Pixiv home page"
      },
      {
        "command": "pixiv-novel-helper.openPixivDashBoardHome",
        "title": "Open Pixiv Dashboard home"
      },
      {
        "command": "pixiv-novel-helper.openPixivDashBoardAllHome",
        "title": "Open Pixiv Dashboard all home"
      },
      {
        "command": "pixiv-novel-helper.openPixivDashBoardAllSeries",
        "title": "Open Pixiv Dashboard all series"
      },
      {
        "command": "pixiv-novel-helper.openPixivDashBoardAllDrafts",
        "title": "Open Pixiv Dashboard all drafts"
      },
      {
        "command": "pixiv-novel-helper.openPixivDashBoardIllustrationsHome",
        "title": "Open Pixiv Dashboard illustrations home"
      },
      {
        "command": "pixiv-novel-helper.openPixivDashBoardNovelsHome",
        "title": "Open Pixiv Dashboard novels home"
      },
      {
        "command": "pixiv-novel-helper.openPixivDashBoardNovelsSeries",
        "title": "Open Pixiv Dashboard novels series"
      },
      {
        "command": "pixiv-novel-helper.openPixivDashBoardNovelsDrafts",
        "title": "Open Pixiv Dashboard novels drafts"
      },
      {
        "command": "pixiv-novel-helper.openPixivRequestHome",
        "title": "Open Pixiv request home"
      },
      {
        "command": "pixiv-novel-helper.openPixivUploadPage",
        "title": "Open Pixiv upload page"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "ts-loader": "^9.4.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "@vscode/test-electron": "^2.3.2"
  }
}
